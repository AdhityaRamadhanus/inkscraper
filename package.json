{
  "name": "inkscraper",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start-apiserver": "nodemon apiserver/server.js",
    "start-scraper": "nodemon scraper/server.js",
    "test": "MONGODB_URI=mongodb://localhost:27017/test node_modules/.bin/mocha --timeout=15000",
    "check": "standard",
    "gen-doc": "apidoc -i apiserver/routes/ -o apidoc",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "dependencies": {
    "agenda": "^2.0.0",
    "agendash": "^1.0.0",
    "async": "^2.3.0",
    "axios": "^0.16.1",
    "bluebird": "^3.4.0",
    "body-parser": "~1.18.2",
    "cheerio": "^0.22.0",
    "compression": "^1.6.2",
    "debug": "^2.6.3",
    "dotenv": "^4.0.0",
    "express": "^4.13.4",
    "express-graphql": "^0.6.4",
    "graphql": "^0.9.3",
    "http-status": "^0.2.2",
    "lodash": "^4.15.0",
    "mongoose": "^5.3.9",
    "mongoose-timestamp": "^0.6.0",
    "morgan": "~1.9.0",
    "nodemon": "^1.10.2",
    "redis": "^2.7.1",
    "request": "^2.72.0",
    "winston": "^2.3.1",
    "snyk": "^1.41.1"
  },
  "devDependencies": {
    "mocha": "^3.1.0",
    "pre-commit": "^1.1.3",
    "should": "^11.1.0",
    "supertest": "^2.0.0"
  },
  "apidoc": {
    "name": "inkscraper",
    "version": "1.0.0",
    "description": "Linkedin Jobs scraper",
    "apidoc": {
      "title": "Linkedin Scraper REST API Documentation",
      "url": "https://github.com/AdhityaRamadhanus/inkscraper"
    }
  },
  "pre-commit": "check",
  "standard": {
    "globals": [
      "_"
    ],
    "ignore": [
      "/test/*.js"
    ]
  },
  "snyk": true
}
